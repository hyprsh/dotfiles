// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 18,
  "theme": {
    "mode": "system",
    "light": "Github Light",
    "dark": "Github Dark"
  },
  "terminal": {
    "font_family": "Zed Plex Mono",
    "font_size": 16,
    "line_height": "comfortable"
  },
  "use_system_path_prompts": false,
  "title_bar": { "show_user_picture": false },
  "project_panel": {
    "dock": "left",
    "indent_guides": { "show": "never" }
  },
  "collaboration_panel": { "button": false },
  "tab_bar": { "show": false },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false
  },
  "gutter": {
    "line_numbers": false,
    "runnables": false, // Show/hide runnables buttons in the gutter.
    "breakpoints": false, // Show/hide show breakpoints in the gutter.
    "folds": true // Show/hide show fold buttons in the gutter.
  }
}
